{{!< default}}
      
{{#post}}
    <div class="container pad-section" role="main">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <article class="{{post_class}}">
                    <header class="page-header">
                        <h1 class="clearfix">
                            <div class="pull-left">{{title}}</div>
                            {{#author}}
                                {{#if image}}
                                <div class="pull-right">
                                    <img src="{{image}}" class="img-circle" width="42px" height="42px" />
                                </div>
                                {{/if}}
                            {{/author}}
                        </h1>
                        <small>
                            <i class="fa fa-user"></i>
                                {{author}}
                                |
                                <i class="fa fa-tag"></i>
                                {{tags}}
                                |
                                <i class="fa fa-calendar"></i>
                                <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
                        </small>
                    </header>
                    
                    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                    <!-- Responsive Main Website -->
                    <ins class="adsbygoogle"
                         style="display:block"
                         data-ad-client="ca-pub-9164254472564319"
                         data-ad-slot="8469515387"
                         data-ad-format="auto"></ins>
                    <script>
                    (adsbygoogle = window.adsbygoogle || []).push({});
                    </script>

                    <section class="post-content">
                        {{content}}
                    </section>
                    
                    <hr/>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <h3><i class="fa fa-share-alt-square"></i> Get Social:</h3>
                            <section class="btn-group btn-group-justified" >
                                {{> "socialbar"}}
                            </section>
                        </div>

                        <div class="col-md-6">
                            <h3><i class="fa fa-money"></i> Donate:</h3>
                            <section class="btn-group btn-group-justified" >
                                {{> "coinwidget"}}
                            </section>
                        </div>
                    </div>
                    
                    <hr/>
                    
                    {{! Comment this with to remove disqus comments }}
                    {{> "comments"}}
                </article>
            </div>
        </div>
    </div>
{{/post}}